@model List<JobTicket>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                JobTicket List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="JobTicket" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bag-plus"></i> Create New Job Ticket
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                     Name
                </th>
                <th>
                  Page Number
                </th>
                <th>
                    Print Target
                </th>
                <th>
                    Job Date
                </th>
                <th>
                    Product
                </th>
                <th>
                    Lot Number
                </th>
                <th>
                    Job Type
                </th>

                <th>
                    Status
                </th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                     <td>@obj.PageNumber</td>
                    <td>@obj.PrintTarget</td>
                    <td>@obj.JobDate</td>

                    <td>@obj.Product</td>

                    <td>@obj.LotNumber</td>
                    <td>@obj.JobType</td>

                 
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Forma" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Forma" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
