@model List<Machinary>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Machinary List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Machinary" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bag-plus"></i> Create New Machinary
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                  Id
                </th>
                <th>
                   Desc
                </th>
                <th>
                    Name
                </th>
                <th>
                    Job Step
                </th>
                <th>
                   Status
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                     <td>@obj.Description</td>
                    <td>@obj.Name</td>
                    <td>@(obj.JobStepId?.ToString() ?? "null")</td>

                    <td>@obj.Status</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Machinary" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Machinary" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
